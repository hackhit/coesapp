- if (current_admin and current_admin.autorizado? 'Secciones', 'cambiar_capacidad')
	= form_tag(cambiar_capacidad_secciones_path, class: 'form-horizontal', authenticity_token: true, remote: true, type: :json ) do
		= hidden_field_tag :id, seccion.id, id: "id#{seccion.id}"
		= number_field_tag :capacidad, seccion.capacidad, required: true, step: 1, in: 0...51, class: 'span11', onchange: '$(this).parent().submit();', id: "cap#{seccion.id}"
- else
	%span.badge.badge-success=seccion.capacidad
